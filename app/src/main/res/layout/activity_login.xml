<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Login">

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/carownerfind"
        android:transitionName="logo_image"/>

    <TextView
        android:id="@+id/login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Hello there, Welcome Back"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta_stencil"
        android:text="Sign in as :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:transitionName="logo_text2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/owner_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#EDBC19"
            android:fontFamily="@font/antic"
            android:text="OWNER"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:transitionName="owner_signup_trans"/>

        <Button
            android:id="@+id/informer_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#EDBC19"
            android:fontFamily="@font/antic"
            android:text="INFORMER"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="50dp"
            android:transitionName="info_signup_trans"/>

    </LinearLayout>

</LinearLayout>